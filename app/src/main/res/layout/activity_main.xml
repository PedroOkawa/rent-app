<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loading"
            type="boolean"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/color_primary_dark"
            app:titleTextColor="@android:color/white"/>

        <include
            android:id="@+id/viewInitialLoading"
            layout="@layout/view_initial_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:loading="@{loading}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvActivityMain"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!--<Button-->
            <!--android:id="@+id/btActivityMainGo"-->
            <!--style="@style/Button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/activity_main_button_text"-->
            <!--android:onClick="@{touchListener.onViewTouched}"/>-->

    </LinearLayout>
</layout>